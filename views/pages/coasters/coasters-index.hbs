<div class="container coasters-index">

  <a href="/coasters/new" class="btn btn-dark">Crear nueva montaña rusa</a>

  <h1 style="font-weight: 100">Índice de montañas rusas</h1>

  <!-- ***** CREA UNA FICHA DE LISTA POR CADA MONTAÑA RUSA **** -->

  <hr>
  {{#each coasters}}
  <a href="/coasters/{{_id}}" class="btn btn-sm btn-dark">Ver detalles</a>
  <h4><strong>Nombre de montaña rusa: </strong>{{name}}</h4>
  <figure>
    <img src="{{image}}" alt="{{description}}">
  </figure>
  <p><strong style="font-weight: 700;">Descripción de montaña rusa: </strong>{{description}}</p>
  <small><strong>Longitud: </strong> {{length}}m | <strong>Inversiones: </strong> {{inversions}} | <strong>Parque: </strong> {{park_id.name}}</small>
  <hr>
  {{/each}}

</div>